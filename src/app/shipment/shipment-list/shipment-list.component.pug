// shipment-list pug

.row
  .col-md-12
    .pull-left
      h3 ShipmentListComponent
        span(*ngIf="!items || items.length==0") : No Items Resolved!
    .pull-right
      button.btn.btn-default((click)="open()") New

.row
  .col-md-12
    table.table.table-hover
      thead
        tr
          th Id
          th Name
      tbody
        tr(*ngFor="let item of items", (click)="goToDetail(item)")
          td {{item._id}}
          td {{item.name}}

ng2-modal(title="New Item", cancel="true", (ok)="create()")
  form.form-horizontal
    .form-group
      label.control-label.col-sm-2 Name
      .col-sm-10
        input.form-control([(ngModel)]="newItem.name", name="name")
